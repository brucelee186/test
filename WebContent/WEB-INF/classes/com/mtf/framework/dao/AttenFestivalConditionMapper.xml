<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mtf.framework.dao.AttenFestivalConditionMapper" > 
	<resultMap type="com.mtf.framework.model.impl.AttenFestivalImpl" id="attenFestival"/> 

	<sql id="updateColumn">
		<if test="dayEnd == null ">
			dayEnd = #{dayEnd},
		</if>
		<if test="divisionId == null">
			divisionId = #{divisionId},
		</if>		
	</sql>

	<sql id="getColumn">
		
	</sql>

	<sql id="getFrom">
		
	</sql>

	<sql id="getWhere">
		
	</sql>

	<sql id="selectColumn">
		
	</sql>

	<sql id="selectFrom">
		
	</sql>

	<sql id="selectWhere">
			<if test="collectDate != null and collectDate != ''">
				AND a.date = #{collectDate}
			</if>
	</sql>

	<sql id="countFrom">
		
	</sql>

	<sql id="countWhere">
		
	</sql>
	<sql id="updateWhere">
		id = #{id}
	</sql>
	<select id="getAttenFestivalCollection" parameterType="java.lang.Object" resultMap="attenFestival">
		SELECT 
			a.id, 
			a.pid, 
			a.name, 
			a.calendarImperial, 
			a.calendar, 
			a.date, 
			a.day, 
			a.dayStart, 
			a.dayEnd, 
			a.typeDate, 
			a.annual, 
			a.loopYear, 
			a.remark, 
			a.tag, 
			a.addDate, 
			a.addUser, 
			a.addIp, 
			a.modifiedDate, 
			a.modifiedUser, 
			a.modifiedIp
		FROM attenFestival AS a
		WHERE
			a.date = DATE_FORMAT(#{collectDate},'%Y-%m-%d')
			AND
			a.tag = 'd'
		LIMIT 1;
	</select>

</mapper>