package com.mtf.framework.service;

import java.util.List;

import com.mtf.framework.exception.PmException;
import com.mtf.framework.model.Items;
import com.mtf.framework.model.common.DataGrid;

public interface ItemsService {
	
	/**
	 * 添加对象
	 * @param items
	 * @return
	 * @throws PmException
	 */
	Items insert(Items items) throws PmException;
	
	/**
	 * 搜索对象列表
	 * @param items
	 * @return
	 * @throws PmException
	 */
	DataGrid<Items> select(Items items) throws PmException;
	
	/**
	 * 搜索对象列表
	 * @param items
	 * @return
	 * @throws PmException
	 */
	List<Items> find(Items items) throws PmException;
	
	/**
	 * 取得单一对象
	 * @param Items
	 * @return
	 * @throws PmException
	 */
	Items get(Items items) throws PmException;
	
	/**
	 * 更新单一对象
	 * @param Items
	 * @return
	 * @throws PmException
	 */
	int update(Items items) throws PmException;
	
	/**
	 * 删除对象
	 * @param items
	 * @return
	 * @throws PmException
	 */
	int delete(Items items) throws PmException;
}
